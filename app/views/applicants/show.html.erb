<h1><%= @applicant.email %>のページ</h1>

<table>
  <thead>
    <tr>
      <th>件名</th>
      <th>業務内容</th>
      <th>開始日時</th>
      <th>終了日時</th>
      <th>募集人数</th>
      <th>応募者数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= blog.starting_time %></td>
        <td><%= blog.finishing_time %></td>
        <td><%= blog.recruitment_number %></td>
        <td><%= blog.favorites.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '募集一覧', recruit_blogs_path,  class: 'btn btn-primary' %>

