<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Starting time</th>
      <th>Finishing time</th>
      <th>Recruitment number</th>
      <th>User</th>
      <th>Applicant</th>
      <th>Applicant number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= blog.starting_time %></td>
        <td><%= blog.finishing_time %></td>
        <td><%= blog.recruitment_number %></td>
        <td><%= blog.user_id %></td>
        <td><%= blog.applicant_id %></td>
        <td><%= blog.applicant_number %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
