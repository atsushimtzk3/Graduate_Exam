<p id="notice"></p>

<h1>募集一覧</h1>

<table>
  <thead>
    <tr>
      <th>件名</th>
      <th>業務内容</th>
      <th>拠点</th>
      <th>開始日時</th>
      <th>終了日時</th>
      <th>募集人数</th>
      <th>応募者数</th>
      <th>担当者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= blog.user_base %></td>
        <td><%= blog.starting_time.to_s(:starting_time)  %></td>
        <td><%= blog.finishing_time.to_s(:finishing_time)  %></td>
        <td><%= blog.recruitment_number %></td>
        <td><%= blog.favorites.count %></td>        
        <td><%= blog.user_name %></td>
        <td class="col-lg-2.4"><%= link_to '　詳細を確認する　', blog_path(blog.id), class: "btn btn-outline-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
